<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="net._3haku.kvb.db.Crawlstatu" table="crawlstatu" catalog="cdutkvb">
        <id name="id" type="java.lang.Integer">
            <column name="id" />
            <generator class="identity" />
        </id>
        <property name="uid" type="int">
            <column name="uid" not-null="true">
                <comment>学号</comment>
            </column>
        </property>
        <property name="statu" type="string">
            <column name="statu" length="2" not-null="true">
                <comment>状态代码 1登陆ok 2课表urlok 3课表htmlok 4其他</comment>
            </column>
        </property>
        <property name="kbhtml" type="string">
            <column name="kbhtml" length="65535" not-null="true">
                <comment>课表的html</comment>
            </column>
        </property>
        <property name="lstime" type="timestamp">
            <column name="lstime" length="19" not-null="true">
                <comment>课表的html</comment>
            </column>
        </property>
    </class>
</hibernate-mapping>
